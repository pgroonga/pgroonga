CREATE TABLE memos (
  id integer PRIMARY KEY,
  tag varchar(256),
  content text
);
CREATE INDEX grnindex ON memos
  USING pgroonga (id pgroonga.int4_ops,
                  content pgroonga.text_full_text_search_ops);
