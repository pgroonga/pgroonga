CREATE TABLE tags (
  id integer,
  user_name text,
  name text
);
CREATE USER alice NOLOGIN;
GRANT ALL ON TABLE tags TO alice;
INSERT INTO tags VALUES (1, 'nonexistent', 'PostgreSQL');
