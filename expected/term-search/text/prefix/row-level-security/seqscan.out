ALTER TABLE tags ENABLE ROW LEVEL SECURITY;
CREATE POLICY tags_myself ON tags USING (user_name = current_user);
SET enable_seqscan = on;
SET enable_indexscan = off;
SET enable_bitmapscan = off;
