require_relative "../pgroonga-package-task"

class PostgreSQL10PGDGPGroongaPackageTask < VersionedPGroongaPackageTask
  def initialize
    super("10", "-pgdg")
  end

  def apt_targets_default
    [
      "ubuntu-bionic",
      "ubuntu-bionic-arm64",
      "ubuntu-focal",
      "ubuntu-focal-arm64",
      "ubuntu-jammy",
      "ubuntu-jammy-arm64",
    ]
  end

  def enable_ubuntu?
    false
  end

  def yum_targets_default
    [
      "centos-7",
    ]
  end
end

task = PostgreSQL10PGDGPGroongaPackageTask.new
task.define
