require_relative "../pgroonga-package-task"

class PostgreSQL18PGDGPGroongaPackageTask < VersionedPGroongaPackageTask
  def initialize
    super("18", "-pgdg")
  end

  def apt_targets_default
    [
      "debian-bookworm",
      "debian-bookworm-arm64",
      "debian-trixie",
      "debian-trixie-arm64",
      "ubuntu-jammy",
      "ubuntu-jammy-arm64",
      "ubuntu-noble",
      "ubuntu-noble-arm64",
    ]
  end

  def enable_ubuntu?
    false
  end

  def yum_targets_default
    [
      "almalinux-8",
      "almalinux-9",
      "almalinux-10",
    ]
  end
end

task = PostgreSQL18PGDGPGroongaPackageTask.new
task.define
